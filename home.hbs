{{!< default}}
{{!-- The tag above means: insert everything in this fileinto the {body} of the default.hbs template --}}

{{#page}}
{{!-- Everything inside the #post tags pulls data from the page --}}


<section>

    <header class="main content">
        <h1>{{title}}</h1>
    </header>

    {{#if feature_image}}
    <div class="image main"><img src="{{img_url feature_image}}" alt="{{title}}" /></div>
    {{/if}}

    <div class="content">
        {{content}}
    </div>

</section>


{{/page}}
